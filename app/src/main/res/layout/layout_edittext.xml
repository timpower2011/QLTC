<?xml version="1.0"
    encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#333366"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:gravity="center"
                android:id="@+id/btnBack"

                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:minWidth="50.0dip">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="TRỞ VỀ"
                    android:background="#333366"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
            <TextView android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="MOTA"
                android:layout_weight="1.0"

                />
            <LinearLayout android:gravity="center"
                android:id="@+id/lnDone"

                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:minWidth="50.0dip">
                <Button android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XONG"
                    android:background="#333366"
                    android:textColor="#FFFFFF"
                    android:id="@+id/btnDone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ScrollView android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">
        <LinearLayout android:orientation="horizontal"
            android:background="#C7C7C7"
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <EditText android:gravity="center|left|top"
                android:id="@+id/EditTextDescription"
                android:background="#FFFFFF"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="80.0dip"
                android:singleLine="false"
                android:inputType="textCapSentences|textMultiLine"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>