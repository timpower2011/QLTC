<?xml version="1.0" encoding="utf-8"?>
    <TabHost xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    tools:context="com.example.tien.testtab.Activity.MainActivity">

        <android.support.v7.widget.ActionBarContainer
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.ActionBarContainer>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/LinearLayoutTabCustomControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:translationZ="@dimen/abc_action_bar_icon_vertical_padding_material"
                tools:ignore="PrivateResource,UnusedAttribute">

                <ImageButton

                    android:id="@+id/ImageButtonTab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_weight="2"
                    android:background="#00fff4f4"
                    android:contentDescription="Tab1"
                    android:src="@drawable/ghichep"
                    tools:ignore="HardcodedText" />

                <ImageButton
                    android:id="@+id/ImageButtonTab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_weight="2"
                    android:background="#00fff4f4"
                    android:src="@drawable/butchi_khongmau"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/ImageButtonTab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_weight="2"
                    android:background="#00fff4f4"
                    android:src="@drawable/thongke_khongmau"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/ImageButtonTab4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_weight="2"
                    android:background="#00fff4f4"
                    android:src="@drawable/vi_khongmau"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/ImageButtonTab5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_weight="2"
                    android:background="#00fff4f4"
                    android:src="@drawable/ghichep_khongmau"
                    tools:ignore="ContentDescription" />

            </LinearLayout>
        </LinearLayout>


        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/LinearLayoutTabControl"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:translationZ="20dp"
            tools:ignore="UnusedAttribute"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignParentStart="true">

        </LinearLayout>

    </RelativeLayout>
</TabHost>
